/* pages/register/register.wxss */

/* --- 页面基础 --- */
.register-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff5f5 0%, #ffffff 50%, #fff5f5 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

/* Background Decorations */
.festive-decor-left {
  position: absolute;
  top: -60rpx;
  left: -60rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 69, 58, 0.12), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.festive-decor-right {
  position: absolute;
  top: 150rpx;
  right: -80rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.1), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.festive-decor-bottom {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(235, 59, 90, 0.08), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* --- Content --- */
.register-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

/* --- Logo Area --- */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.logo-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #eb3b5a 0%, #d43030 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(212, 48, 48, 0.35);
  border: 4rpx solid rgba(255, 215, 0, 0.5);
}

.logo-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #1c1c1e;
  letter-spacing: 2rpx;
  margin-top: 8rpx;
}

.app-slogan {
  font-size: 24rpx;
  color: #d43030;
  font-weight: 500;
  letter-spacing: 2rpx;
  opacity: 0.8;
}

/* --- Register Card --- */
.register-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(212, 48, 48, 0.1);
  border: 1rpx solid rgba(212, 48, 48, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-accent {
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #eb3b5a, #fa8231);
  border-radius: 4rpx;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(235, 59, 90, 0.3);
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1c1c1e;
}

/* --- Input Group --- */
.input-group {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 100rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  margin-bottom: 24rpx;
}

.input-group:focus-within {
  border-color: rgba(212, 48, 48, 0.3);
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(212, 48, 48, 0.1);
}

.input-icon {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 手机图标 - CSS绘制 */
.icon-phone-shape {
  width: 28rpx;
  height: 44rpx;
  border: 4rpx solid #d43030;
  border-radius: 8rpx;
  position: relative;
}

.icon-phone-shape::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 4rpx;
  background: #d43030;
  border-radius: 2rpx;
}

/* 用户图标 - CSS绘制 */
.icon-user-shape {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

.icon-user-shape::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 20rpx;
  border: 4rpx solid #d43030;
  border-radius: 50%;
}

.icon-user-shape::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 36rpx;
  height: 18rpx;
  border: 4rpx solid #d43030;
  border-top: none;
  border-radius: 0 0 18rpx 18rpx;
}

/* 医院/科室图标 - CSS绘制 */
.icon-hospital-shape {
  width: 36rpx;
  height: 40rpx;
  border: 4rpx solid #d43030;
  border-radius: 4rpx 4rpx 0 0;
  position: relative;
}

.icon-hospital-shape::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: 16rpx;
  background: #d43030;
}

.icon-hospital-shape::after {
  content: '';
  position: absolute;
  top: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 4rpx;
  background: #d43030;
}

.register-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.placeholder-style {
  color: #999;
  font-size: 30rpx;
}

/* --- Picker Display --- */
.picker-display {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  line-height: 100rpx;
}

.picker-display.placeholder {
  color: #999;
}

.picker-arrow {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 14rpx solid #999;
}

/* --- Agreement Section --- */
.agreement-section {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
}

.agreement-checkbox {
  padding: 4rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.checkbox-icon {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  background: #fff;
}

.checkbox-icon.checked {
  background: linear-gradient(135deg, #eb3b5a 0%, #d43030 100%);
  border-color: #d43030;
}

.check-mark {
  width: 16rpx;
  height: 10rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg) translateY(-2rpx);
}

.agreement-text {
  flex: 1;
  font-size: 24rpx;
  line-height: 1.6;
  flex-wrap: wrap;
}

.agreement-desc {
  color: #666;
}

.agreement-link {
  color: #d43030;
  font-weight: 500;
}

.agreement-link:active {
  opacity: 0.7;
}

/* --- Privacy Notice --- */
.privacy-notice {
  display: flex;
  align-items: center;
  background: rgba(212, 48, 48, 0.06);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 24rpx;
}

.notice-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.notice-text {
  font-size: 22rpx;
  color: #888;
  flex: 1;
  line-height: 1.5;
}

/* --- Register Button --- */
.register-btn {
  width: 100% !important;
  height: 100rpx !important;
  margin-top: 20rpx !important;
  background: linear-gradient(135deg, #eb3b5a 0%, #d43030 100%) !important;
  border-radius: 50rpx !important;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 8rpx 30rpx rgba(212, 48, 48, 0.4) !important;
  padding: 0 !important;
  line-height: 100rpx !important;
}

.register-btn[disabled] {
  background: linear-gradient(135deg, #ccc 0%, #aaa 100%) !important;
  box-shadow: none !important;
}

.register-btn text {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 4rpx;
}

.register-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* --- Tips --- */
.tips {
  margin-top: 30rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* --- Back Link --- */
.back-link {
  margin-top: 30rpx;
  text-align: center;
  padding: 16rpx 0;
}

.back-text {
  font-size: 28rpx;
  color: #d43030;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.back-link:active {
  opacity: 0.7;
}

/* --- Footer --- */
.footer {
  margin-top: auto;
  padding-top: 20rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #ccc;
  letter-spacing: 2rpx;
}

/* --- Picker Modal --- */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.picker-mask.show {
  opacity: 1;
  visibility: visible;
}

.picker-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.picker-container.show {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel {
  font-size: 30rpx;
  color: #999;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-confirm {
  font-size: 30rpx;
  color: #d43030;
  font-weight: 500;
}

.picker-view {
  height: 450rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

/* --- Animations --- */
.fade-in {
  animation: fadeIn 0.6s ease both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.slide-up {
  animation: slideUp 0.6s ease both;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* --- Dark Mode --- */
@media (prefers-color-scheme: dark) {
  .register-page {
    background: linear-gradient(180deg, #1e1e1f 0%, #2a2a2c 50%, #1e1e1f 100%);
  }

  .app-name {
    color: #f1f2f6;
  }

  .register-card {
    background: rgba(43, 44, 48, 0.95);
    border-color: rgba(212, 48, 48, 0.15);
  }

  .card-title {
    color: #f1f2f6;
  }

  .input-group {
    background: #1e1e1f;
  }

  .input-group:focus-within {
    background: #2a2a2c;
  }

  .register-input {
    color: #f1f2f6;
  }

  .picker-display {
    color: #f1f2f6;
  }

  .tips-text {
    color: #666;
  }

  .back-text {
    color: #eb3b5a;
  }

  .footer-text {
    color: #444;
  }

  .picker-container {
    background: #2a2a2c;
  }

  .picker-header {
    border-color: #444;
  }

  .picker-title {
    color: #f1f2f6;
  }

  .picker-item {
    color: #f1f2f6;
  }
}

/* --- Agreement Modal --- */
.agreement-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
  display: flex;
  align-items: flex-end;
  /* Bottom sheet style */
  justify-content: center;
}

.agreement-modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.agreement-modal-container {
  width: 100%;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  position: relative;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  padding-bottom: env(safe-area-inset-bottom);
}

.agreement-modal-mask.show .agreement-modal-container {
  transform: translateY(0);
}

.modal-header {
  padding: 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title-bar {
  width: 80rpx;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
}

.modal-close {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
  padding: 10rpx;
}

.modal-content-scroll {
  flex: 1;
  min-height: 400rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.modal-text-content {
  padding: 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.agreement-section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  margin-top: 30rpx;
  margin-bottom: 16rpx;
  display: block;
}

.agreement-paragraph {
  margin-bottom: 20rpx;
  display: block;
}

.modal-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-confirm-btn {
  background: #d43030 !important;
  color: #fff !important;
  border-radius: 50rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  padding: 0 !important;
  line-height: 90rpx !important;
  height: 90rpx !important;
  box-shadow: 0 8rpx 20rpx rgba(212, 48, 48, 0.3) !important;
  margin: 0 !important;
  width: 100% !important;
}

/* Dark mode for modal */
@media (prefers-color-scheme: dark) {
  .agreement-modal-container {
    background: #1e1e1f;
  }

  .modal-title {
    color: #f1f2f6;
  }

  .modal-header,
  .modal-footer {
    border-color: #333;
  }

  .modal-text-content {
    color: #aaa;
  }

  .agreement-section-title {
    color: #f1f2f6;
  }

  .modal-title-bar {
    background: #444;
  }
}