/* pages/login/login.wxss */

/* --- 页面基础 (Festive Red Theme) --- */
.login-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff5f5 0%, #ffffff 50%, #fff5f5 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

/* Festive Decorations */
.festive-decor-left {
  position: absolute;
  top: -60rpx;
  left: -60rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 69, 58, 0.12), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.festive-decor-right {
  position: absolute;
  top: 150rpx;
  right: -80rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.1), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.festive-decor-bottom {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(235, 59, 90, 0.08), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* --- Loading State --- */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(212, 48, 48, 0.2);
  border-top-color: #d43030;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* --- Login Content --- */
.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 50rpx;
}

/* --- Logo Area --- */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #eb3b5a 0%, #d43030 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(212, 48, 48, 0.35);
  border: 4rpx solid rgba(255, 215, 0, 0.5);
}

.logo-text {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #1c1c1e;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}

.app-slogan {
  font-size: 24rpx;
  color: #d43030;
  font-weight: 500;
  letter-spacing: 4rpx;
  opacity: 0.8;
}

/* --- Login Card --- */
.login-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(212, 48, 48, 0.1);
  border: 1rpx solid rgba(212, 48, 48, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-accent {
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #eb3b5a, #fa8231);
  border-radius: 4rpx;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(235, 59, 90, 0.3);
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1c1c1e;
}

/* --- Input Group --- */
.input-group {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 100rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: rgba(212, 48, 48, 0.3);
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(212, 48, 48, 0.1);
}

.input-icon {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 手机图标 - CSS绘制 */
.icon-phone-shape {
  width: 28rpx;
  height: 44rpx;
  border: 4rpx solid #d43030;
  border-radius: 8rpx;
  position: relative;
}

.icon-phone-shape::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 4rpx;
  background: #d43030;
  border-radius: 2rpx;
}

/* 用户图标 - CSS绘制 */
.icon-user-shape {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

.icon-user-shape::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 20rpx;
  border: 4rpx solid #d43030;
  border-radius: 50%;
}

.icon-user-shape::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 36rpx;
  height: 18rpx;
  border: 4rpx solid #d43030;
  border-top: none;
  border-radius: 0 0 18rpx 18rpx;
}

.login-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.placeholder-style {
  color: #999;
  font-size: 30rpx;
}

/* --- Login Button --- */
.login-btn {
  width: 100% !important;
  height: 100rpx !important;
  margin-top: 40rpx !important;
  background: linear-gradient(135deg, #eb3b5a 0%, #d43030 100%) !important;
  border-radius: 50rpx !important;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 8rpx 30rpx rgba(212, 48, 48, 0.4) !important;
  padding: 0 !important;
  line-height: 100rpx !important;
}

.login-btn text {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 4rpx;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* --- Tips --- */
.tips {
  margin-top: 30rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* --- Register Link --- */
.register-link {
  margin-top: 30rpx;
  text-align: center;
  padding: 16rpx 0;
}

.register-text {
  font-size: 28rpx;
  color: #d43030;
  font-weight: 500;
}

.register-link:active {
  opacity: 0.7;
}

/* --- Footer --- */
.footer {
  margin-top: auto;
  padding-top: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #ccc;
  letter-spacing: 2rpx;
}

/* --- Animations --- */
.fade-in {
  animation: fadeIn 0.6s ease both;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.slide-up {
  animation: slideUp 0.6s ease both;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* --- Dark Mode Adaptation --- */
@media (prefers-color-scheme: dark) {
  .login-page {
    background: linear-gradient(180deg, #1e1e1f 0%, #2a2a2c 50%, #1e1e1f 100%);
  }

  .app-name {
    color: #f1f2f6;
  }

  .login-card {
    background: rgba(43, 44, 48, 0.95);
    border-color: rgba(212, 48, 48, 0.15);
  }

  .card-title {
    color: #f1f2f6;
  }

  .input-group {
    background: #1e1e1f;
  }

  .input-group:focus-within {
    background: #2a2a2c;
  }

  .login-input {
    color: #f1f2f6;
  }

  .tips-text {
    color: #666;
  }

  .register-text {
    color: #eb3b5a;
  }

  .footer-text {
    color: #444;
  }

  .loading-text {
    color: #999;
  }
}
