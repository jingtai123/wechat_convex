/* pages/manager/manager.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f7;
  overflow: hidden;
}

/* Tabs */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 10rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #007aff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background: #007aff;
  border-radius: 4rpx;
}

/* Content Area */
.content-scroll {
  flex: 1;
  height: 0;
  padding: 20rpx;
  box-sizing: border-box;
}

.module-section {
  padding-bottom: 40rpx;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.header-row.column {
  flex-direction: column;
  align-items: stretch;
}

.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.btn {
  padding: 10rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.btn-add {
  background: #007aff;
  color: #fff;
}

/* Card List */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.card-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  overflow: hidden; 
}

.card-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.mt-10 {
  margin-top: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  background: #f0f0f2;
  color: #666;
}

.tag-green { background: #e8f5e9; color: #2e7d32; }
.tag-gray { background: #f5f5f5; color: #9e9e9e; }

.card-sub {
  font-size: 24rpx;
  color: #888;
}

.card-time {
  font-size: 22rpx;
  color: #aaa;
}

.phone-item {
  font-size: 24rpx;
  color: #444;
  margin-right: 16rpx;
  background: #f9f9f9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.card-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 20rpx;
}

.card-actions .btn {
  text-align: center;
  padding: 8rpx 20rpx;
  min-width: 80rpx;
}

.btn-primary { background: #e0f2fe; color: #0284c7; }
.btn-success { background: #dcfce7; color: #16a34a; }
.btn-danger { background: #fee2e2; color: #dc2626; }

.empty-state {
  text-align: center;
  color: #aaa;
  margin-top: 60rpx;
  font-size: 28rpx;
}

.search-input {
  background: #fff;
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* Modal Overlay & Container */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-container {
  width: 100%;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx 40rpx 60rpx;
  position: relative;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-sizing: border-box;
}

.modal-container.show {
  transform: translateY(0);
}

.modal-header {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  background: #f5f5f7;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.checkbox-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background: #f5f5f7;
  padding: 20rpx;
  border-radius: 12rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.checkbox-item checkbox {
  transform: scale(0.8);
  margin-right: 10rpx;
}

.submit-btn {
  background: #007aff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  width: 100%;
}

/* --- Dark Mode --- */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1c1c1e;
  }
  
  .tabs {
    background: #2c2c2e;
    border-bottom: 1rpx solid #3a3a3c;
  }
  
  .tab-item {
    color: #98989d;
  }
  
  .tab-item.active {
    color: #0a84ff;
  }
  
  .section-title, .card-title, .modal-header {
    color: #fff;
  }
  
  .card-item, .modal-container, .search-input {
    background: #2c2c2e;
    color: #fff;
  }

  .card-icon {
     background: #3a3a3c;
  }
  
  .card-tag {
    background: #3a3a3c;
    color: #ebebf5;
  }

  .phone-item {
      background: #3a3a3c;
      color: #ebebf5;
  }
  
  .input {
    background: #3a3a3c;
    color: #fff;
  }
  
  .label {
    color: #8e8e93;
  }
}