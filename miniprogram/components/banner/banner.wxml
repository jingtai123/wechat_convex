<view class="banner">
  <swiper class="swiper" interval="{{interval}}" duration="{{duration}}" autoplay bindchange="swiperChange">
    <swiper-item wx:for="{{swiperArr}}" wx:key="*this">
      <image class="img" src="{{item}}" mode="widthFix"></image>
    </swiper-item>
  </swiper>
  <view class="dots">
    <view wx:for="{{swiperArr}}" wx:key="*this" class="dot {{activeNum==index ? 'active':''}}"></view>
  </view>
</view>